<li id="<%= dom_id(@meal, :index) %>" class="col-span-1 flex flex-col rounded-lg bg-white text-center shadow">
  <%= tag.turbo_frame_tag @meal, class: "flex flex-col h-full" do %>
    <div class="flex flex-1 flex-col p-5">
      <%= link_to meal_path(@meal) do %>
        <%= render_svg "icons/meal", styles: "mx-auto icon-xl flex-shrink-0 rounded" %>
        <h3 class="mt-6 text-sm font-medium text-gray-900">
          <%= @meal.name %>
        </h3>
        <dl class="mt-1 flex flex-grow flex-col justify-between">
          <dt class="sr-only"><%= @meal.description %></dt>
          <dd class="text-sm text-gray-500">
            <%= @meal.description %>
          </dd>
        </dl>

        <% if @meal.ingredients_count > 0 %>
          <dl class="mt-1 flex flex-grow flex-col justify-between">
            <dt class="sr-only">
              <%= @meal.ingredients.purchased.count %> / <%= pluralize(@meal.ingredients_count, "grocery") %>
            </dt>
            <dd class="text-sm text-gray-900">
              <%= @meal.ingredients.purchased.count %> / <%= pluralize(@meal.ingredients_count, "grocery") %>
            </dd>
          </dl>
        <% end %>
        <dl class="mt-1 flex flex-grow flex-col justify-between">
          <dt class="sr-only"><%= @meal.serving_for %></dt>
          <dd class="text-sm text-gray-500">
            For <%= pluralize(@meal.serving_for, "serving") %>
          </dd>
        </dl>
      <% end %>
    </div>
    <div class="border-t border-gray-200">
      <div class="-mt-px flex divide-x divide-gray-200">
        <div class="flex w-0 flex-1">
          <%= link_to edit_meal_path(@meal), class: 'relative -mr-px inline-flex w-0 flex-1 items-center justify-center rounded-bl-lg border border-transparent py-4 text-sm font-medium text-gray-700 hover:text-gray-500', form: { data: { turbo_frame: "_top" } } do %>
            <%= render_svg "icons/pencil-square", styles: "h-5 w-5 text-gray-400" %>
            <span class="ml-3">Edit</span>
          <% end %>
        </div>
        <div class="-ml-px flex w-0 flex-1">
          <%= link_to meal_path(@meal),data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } , class: 'relative inline-flex w-0 flex-1 items-center justify-center rounded-br-lg border border-transparent py-4 text-sm font-medium text-red-600 hover:text-red-200' do %>
            <%= render_svg "icons/trash", styles: "h-5 w-5 text-red-600 hover:text-red-200" %>
            <span class="ml-3">Delete</span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</li>

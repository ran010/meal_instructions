<%= content_for :title, @meal.name %>
<%= content_for :page_title do %>
  <%= link_to meals_path, class: "pr-3" do %>
    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
    </svg>
  <% end %>
  <h1 class="text-2xl font-bold"><%= @meal.name %>'s Groceries</h1>
<% end %>

<div class="container px-4 mx-auto my-8 relative">
  <div class="flex justify-between">
    <div>
      <p class="text-gray-500"><%= @meal.description %></p>
      <p class="text-gray-500">
        <%= pluralize(@meal.serving_for, "serving") %>
      </p>
    </div>

    <div class="flex space-x-4" data-controller="scanner" data-scanner-grocery-url-value="<%= groceries_url %>">
      <div  
        data-scanner-target="barcode"
        data-controller="modal"
        data-modal-allow-background-close="true"
        data-action="turbo:frame-load->modal#open turbo:submit-end->modal#close"
      > 
        <div>
          <a href="#" data-action="click->modal#open click->scanner#startScanning" class="inline-flex items-center rounded bg-white text-sm p-3 font-medium border border-blue-700 text-blue-700 hover:text-blue-600">
            <%= render_svg "icons/add-solid", styles: "icon-sm fill-blue-700" %>
            <span class="ml-2 font-medium">Scan grocery bar code</span>
          </a>
        </div>  
        <div data-modal-target="container" data-action="keyup@window->scanner#stopScanning click->modal#stopScanning click->modal#closeBackground keyup@window->modal#closeWithKeyboard" 
            class="hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
            <div>
              <video id="video" width="300" height="200"></video>
            </div>
            <div id="sourceSelectPanel">
            </div>
        </div> 
      </div>  
      <div
        data-controller="modal"
        data-modal-allow-background-close="true"
        data-action="turbo:frame-load->modal#open turbo:submit-end->modal#close"
      >
        <a href="#" data-scanner-target="ingredient" data-action="click->modal#open" class="inline-flex items-center rounded bg-white text-sm p-3 font-medium border border-blue-700 text-blue-700 hover:text-blue-600">
          <%= render_svg "icons/add-solid", styles: "icon-sm fill-blue-700" %>
          <span class="ml-2 font-medium">Add Ingredient</span>
        </a>

        <div data-modal-target="container" data-action="click->modal#closeBackground keyup@window->modal#closeWithKeyboard" class="hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
          <!-- Modal Inner Container -->
          <div class="max-h-screen w-full max-w-lg relative">
            <!-- Modal Card -->
            <div class="m-1 bg-white rounded shadow">
              <div class="p-8">
                <h2 class="text-xl mb-4">New Ingredient</h2>

                <%= turbo_frame_tag 'new_ingredients' do %>
                  <%= render partial: "ingredients/form", locals: { ingredient: @meal.ingredients.new, meal: @meal } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>

  <div class="min-w-0 flex flex-1">
    <div class="bg-white lg:min-w-0 lg:flex-1 mr-3">
      <h4 class="mb-4">Ingredients:</h4>
      <%= tag.ul id: "ingredients", class: "mr-4 divide-y divide-gray-200 overflow-hidden bg-white shadow sm:rounded-md", style: "list-style-type: none;" do %>
        <%= turbo_frame_tag 'ingredients' do %>
          <%= render @ingredients %>
        <% end %>
      <% end %>
    </div>

    <div class="flex-1 xl:flex-shrink-0">
      <h4 class="mb-4">Instructions:</h4>
      <ul style="list-style-type: none;">
        <% @instructions.each do |instruction| %>
          <li class="pb-2"><%= instruction.full_description %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
